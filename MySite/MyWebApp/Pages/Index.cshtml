@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

    var message = string.Empty;
    if (DateTime.Now.Hour >= 5 && DateTime.Now.Hour <= 12)
    {
        message = "Good morning,";
    }
    else if (DateTime.Now.Hour > 12 && DateTime.Now.Hour <= 18)
    {
        message = "Good afternoon,";
    }
    else
    {
        message = "Good evening,";
    }
}

<div class="row bg-white min-content-height">
    <h1 class="display-4">@message my name is Luiz Araujo</h1>
    <div class="container">
        <p><span class="auto-type"></span></p>
    </div>
</div>
<div class="after-padding"><hr /></div>
<div class="row bg-white">
    <div class="container">
        <div class="row m-5">
            <div class="col-sm-9">
                <div class="content-text-right">
                    <h2 class="display-4">About me</h2>
                    <p class="row">
                        <div class="align-content-center">
                            I'm a fullstack developer who has been venturing into the technology world for over 10 years.
                        </div>
                    </p>
                    <p class="row">
                        <div class="align-content-center">
                            Most of that time, I've been working for private companies, learning and trying to provide not only technical support, but also an understanding of requirements in order to advise and better respond to their needs.
                        </div>
                    </p>
                    <p class="row">
                        <div class="align-content-center">
                            Due to this behavior, I also acquired a good knowledge of software architecture, project management and agile methodologies.
                        </div>
                    </p>
                    <p class="row">
                        <div class="align-content-center">
                            Would you like to know more, <a class="styled-link" asp-page="/Contact">contact me</a> or take a look at my complete <a class="styled-link" asp-page="/About">profile</a>.
                        </div>
                    </p>
                </div>
            </div>
            <div class="col-sm-3 align-self-center">
                <div class="content-image-left">
                    <img class="img-content" src="~/img/luiz_bw_profile_small.png" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="after-padding"><hr /></div>
<div class="row bg-white">
    <div class="container">
        <div class="row m-5">
            <div class="content-text-right">
                <h2 class="display-4">My career</h2>
                <p class="row">
                    <div class="align-content-center">
                        I had the opportunity to work in companies of different sizes where I could work on projects in different parts of Brazil, Canada and Philippines.
                    </div>
                </p>
            </div>
            <div class="row p-3 align-self-center">
                <div class="col-sm-4">
                    <img class="img-logo" src="~/img/mdfcommenrce-logo.png" />
                </div>
                <div class="col-sm-4">
                    <img class="img-logo" src="~/img/procom-logo.png" />
                </div>
                <div class="col-sm-4">
                    <img class="img-logo" src="~/img/cgi_logo.png" />
                </div>
            </div>
            <div class="row p-3 align-self-center">
                <div class="col-sm-4">
                    <img class="img-logo" src="~/img/avanade-logo-vector.png" />
                </div>
                <div class="col-sm-4">
                    <img class="img-logo" src="~/img/Simplifique_Logotipo_cabecalho.png" />
                </div>
                <div class="col-sm-4">
                    <img class="img-logo bg-success" src="~/img/logoZaite.png" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="after-padding"><hr /></div>
<div class="row bg-white">
    <div class="container">
        <div class="row m-5">
